{
  "$id": "notifications-end-user-error-report",
  "title": "End User Report Error",
  "type": "object",
  "properties": {
    "subject": {
      "type": "string",
      "sanitize": "mongo"
    },
    "description": {
      "type": "string",
      "sanitize": "mongo"
    },
    "mobile": {
      "type": ["string", "null"],
      "sanitize": "mongo",
      "pattern": "^\\+?([0-9] ?){9,14}[0-9]$"
    }
  },
  "required": [
    "subject",
    "description"
  ]
}
